<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/attlist_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/attlist_toolbar_LinearLayout"
        android:layout_width="fill_parent"
        android:paddingBottom="2dip"
        android:layout_height="46dip" >
        
        <Button android:id="@+id/attlistitem_longclick_menu"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView 
            android:id="@+id/attlist_home_btn"
            style="@style/toolbar_back"
            android:text="属性"/>
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/divide"
            android:layout_marginRight="48dip"
            android:layout_gravity="right"/>
        
        <ImageButton 
            android:id="@+id/attlist_add_att"
            android:layout_width="48dip"
            android:layout_height="fill_parent"
            android:layout_gravity="right"/>
        
    </FrameLayout>
    
	<FrameLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="0dip"
	    android:layout_weight="1">
        
	    <ListView
	        android:id="@+id/attlist_listview"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:background="#ffe5e5e5"
	        android:divider="#00000000"
	        android:fadingEdge="none"
	        android:dividerHeight="0px"
	        android:cacheColorHint="#00000000" >
	    </ListView>
	</FrameLayout>
</LinearLayout>