<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<style name="Animations" />

	<!-- PopDownMenu -->
	<style name="Animations.PopDownMenu" />
	
	<style name="Animations.PopDownMenu.Left">
		<!--todo 删除@ sjy 0518-->
		<item name="android:windowEnterAnimation">@anim/grow_from_topleft_to_bottomright</item>
		<item name="android:windowExitAnimation">@anim/shrink_from_bottomright_to_topleft</item>
	</style>
	
	<style name="Animations.PopDownMenu.Right">
		<!--todo 删除@ sjy 0518-->
		<item name="android:windowEnterAnimation">@anim/grow_from_topright_to_bottomleft</item>
		<item name="android:windowExitAnimation">@anim/shrink_from_bottomleft_to_topright</item>
	</style>
	
	<style name="Animations.PopDownMenu.Center">
		<!--todo 删除@ sjy 0518-->
		<item name="android:windowEnterAnimation">@anim/grow_from_top</item>
		<item name="android:windowExitAnimation">@anim/shrink_from_bottom</item>
	</style>
	
	<!-- PopUpMenu -->
	<style name="Animations.PopUpMenu" />
	
	<style name="Animations.PopUpMenu.Left">
		<!--todo 删除@ sjy 0518-->
		<item name="android:windowEnterAnimation">@anim/grow_from_bottomleft_to_topright</item>
		<item name="android:windowExitAnimation">@anim/shrink_from_topright_to_bottomleft</item>
	</style>
	
	<style name="Animations.PopUpMenu.Right">
		<!--todo 删除@ sjy 0518-->
		<item name="android:windowEnterAnimation">@anim/grow_from_bottomright_to_topleft</item>
		<item name="android:windowExitAnimation">@anim/shrink_from_topleft_to_bottomright</item>
	</style>
	
	<style name="Animations.PopUpMenu.Center">
		<!--todo 删除@ sjy 0518-->
		<item name="android:windowEnterAnimation">@anim/grow_from_bottom</item>
		<item name="android:windowExitAnimation">@anim/shrink_from_top</item>
	</style>
	
	
	<style name="AnimationFade_Top_left">
        <item name="android:windowEnterAnimation">@anim/scale_in_top_left</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>a
    </style>
    <style name="AnimationFade_Top_right">
        <item name="android:windowEnterAnimation">@anim/scale_in_top_right</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>
    <style name="AnimationFade_Bottom_left">
        <item name="android:windowEnterAnimation">@anim/scale_in_bottom_left</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>a
    </style>
    <style name="AnimationFade_Bottom_right">
        <item name="android:windowEnterAnimation">@anim/scale_in_bottom_right</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>
    
	
	<style name="toolbar">
	    <item name="android:background">@drawable/toolbg</item>
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">46dip</item>
	</style>
	
	<style name="image_button">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:contentDescription">@string/contentDescription</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_marginRight">10dp</item>
	    <item name="android:background">@drawable/btn_trans_selector</item>
	</style>
	
	<style name="toolbar_back">
	    <item name="android:drawableLeft">@drawable/back</item>
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_marginTop">12dp</item>
	    <item name="android:layout_marginLeft">10dp</item>
	    <item name="android:drawablePadding">2dp</item>
	    <item name="android:gravity">center</item>
	    <item name="android:layout_gravity">left</item>
	    <item name="android:textSize">16sp</item>
	    <item name="android:textColor">#FFFFFF</item>
	</style>
	
	<style name="menu_item">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:paddingTop">12dp</item>
	    <item name="android:paddingBottom">12dp</item>
	    <item name="android:gravity">center</item>
	    <item name="android:layout_gravity">center</item>
	    <item name="android:textSize">18sp</item>
	    <item name="android:textColor">#333333</item>
	    <item name="android:background">@drawable/menu_selector</item>
	</style>
	
	<style name="button">
	    <item name="android:layout_width">48dip</item>
	    <item name="android:layout_height">fill_parent</item>
	    <item name="android:background">@drawable/btn_trans_selector</item>
	    <item name="android:textColor">#ffffffff</item>
	</style>
	<style name="button_grey">
	    <item name="android:layout_width">48dip</item>
	    <item name="android:layout_height">fill_parent</item>
	    <item name="android:background">@drawable/btn_trans_selector_light_colored</item>
	    <item name="android:textColor">#666666</item>
	</style>
	<style name="tuyabtn_style">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_gravity">center</item>
	    <item name="android:layout_marginTop">2dp</item>
	</style>
	
	<style name="button_divide">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:contentDescription">@string/contentDescription</item>
	    <item name="android:layout_height">fill_parent</item>
	    <item name="android:src">@drawable/divide</item>
	</style>
	
	<style name="theme_app" parent="@android:style/Theme.NoTitleBar">
	    <item name="android:background">@drawable/page_bg</item>
	</style>
	
	<style name="expandable_listview">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">fill_parent</item>
	    <item name="android:cacheColorHint">#00000000</item>
	    <item name="android:fastScrollEnabled">true</item>
	    <item name="android:listSelector">@null</item>
	    <item name="android:divider">@null</item>
	    <item name="android:dividerHeight">0dip</item>
	    <item name="android:fadingEdge">none</item>
	    <item name="android:footerDividersEnabled">true</item>
	    <item name="android:groupIndicator">@null</item>
	</style>
	
	<style name="listview">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">fill_parent</item>
	    <item name="android:cacheColorHint">#00000000</item>
	    <item name="android:listSelector">@null</item>
	    <item name="android:fastScrollEnabled">true</item>
	    <item name="android:divider">@null</item>
	    <item name="android:fadingEdge">none</item>
	    <item name="android:dividerHeight">0dip</item>
	</style>
	
	<style name="doodle_radiobutton">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_marginLeft">2dip</item>
	    <item name="android:layout_marginRight">2dip</item>
	</style>
	
	<style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">  
    	<item name="android:button">@drawable/checkbox_pay</item>  
	</style>  
	
	<style name="Dialog" parent="android:style/Theme.Dialog">  
        <item name="android:background">@drawable/dialog_bg</item>  
        <item name="android:windowBackground">@android:color/transparent</item>  
        <item name="android:windowNoTitle">true</item>  
        <item name="android:windowIsFloating">true</item>  
    </style>  
	    
</resources>